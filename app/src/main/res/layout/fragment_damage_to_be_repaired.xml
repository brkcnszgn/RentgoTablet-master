<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="contract"
            type="com.creatifsoftware.filonova.model.ContractItem" />

        <variable
            name="callback"
            type="com.creatifsoftware.filonova.view.callback.DrivingLicenseImageClickCallback" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/damage_to_be_repaired_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text="@string/repaired_damage_entry_title"
            android:textColor="@color/main_title_color"
            android:textSize="27sp"
            app:fontFamily="@font/roboto_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/damage_to_be_repaired_title"
            android:layout_marginTop="11dp"
            android:background="@color/white_color"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/damage_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/customer_information_title"
                app:layoutManager="LinearLayoutManager" />
        </LinearLayout>

    </RelativeLayout>
</layout>