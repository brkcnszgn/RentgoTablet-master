<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="contract"
            type="com.creatifsoftware.filonova.model.ContractItem" />

        <variable
            name="callback"
            type="com.creatifsoftware.filonova.view.callback.DrivingLicenseImageClickCallback" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_base_background"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/lnr_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/header_layout_bg"
            android:elevation="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/damage_to_be_repaired_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:textColor="@color/main_title_color"
                android:textSize="27sp"
                app:fontFamily="@font/roboto_medium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnr_header"
            android:layout_marginTop="11dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/damage_list"
                android:background="@drawable/contract_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/customer_information_title"
                app:layoutManager="LinearLayoutManager" />
        </LinearLayout>

    </RelativeLayout>
</layout>