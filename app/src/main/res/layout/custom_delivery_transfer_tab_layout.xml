<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delivery_contract"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/spacing_default"
    android:background="@drawable/dashboard_will_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/delivery_tansfer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/will_transfer_title"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total_delivery_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:textSize="48sp"
        tools:text="0" />


    <TextView
        android:id="@+id/first_delivery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/nearest_exit"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/first_delivery_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:textSize="18sp"
        tools:text="10:56" />


    <LinearLayout
        android:id="@+id/horizontal_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/delivery_tansfer_title"
        android:layout_alignStart="@+id/delivery_tansfer_title"
        android:layout_marginTop="@dimen/spacing_default"
        android:layout_marginEnd="@dimen/spacing_small"
        android:alpha="0.15"
        android:background="@color/white_color"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>
