<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="contract"
            type="com.creatifsoftware.filonova.model.ContractItem" />

        <variable
            name="callback"
            type="com.creatifsoftware.filonova.view.callback.AdditionalPhotoImageClickCallback" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_base_background"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/lnr_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/header_layout_bg"
            android:elevation="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_logo"
                android:visibility="gone" />

            <TextView
                android:id="@+id/contract_information_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:textColor="@color/main_title_color"
                android:textSize="27sp"
                app:fontFamily="@font/roboto_medium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnr_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="#ccffffff"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rigt_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_field_layout_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_with_border_ripple_effect"
                    android:onClick="@{(v) -> callback.onClick(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/right"
                        android:textColor="@color/main_title_color"
                        android:textSize="@dimen/general_text_title_size"
                        app:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:id="@+id/right_face_photo"
                        android:layout_width="42dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toStartOf="@+id/right_photo_checkbox"
                        android:gravity="end"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_take_license_back_photo" />

                    <CheckBox
                        android:id="@+id/right_photo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="9dp"
                        android:buttonTint="@color/colorMainBlue"
                        android:checked="false"
                        android:enabled="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/left_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_field_layout_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_with_border_ripple_effect"
                    android:onClick="@{(v) -> callback.onClick(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/left_front_photo"
                        android:textColor="@color/main_title_color"
                        android:textSize="@dimen/general_text_title_size"
                        app:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:id="@+id/left_face_photo"
                        android:layout_width="42dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toStartOf="@+id/left_photo_checkbox"
                        android:gravity="end"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_take_license_front_photo" />

                    <CheckBox
                        android:id="@+id/left_photo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="9dp"
                        android:buttonTint="@color/colorMainBlue"
                        android:checked="false"
                        android:enabled="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/front_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_field_layout_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_with_border_ripple_effect"
                    android:onClick="@{(v) -> callback.onClick(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/front_back_photo"
                        android:textColor="@color/main_title_color"
                        android:textSize="@dimen/general_text_title_size"
                        app:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:id="@+id/front_face_photo"
                        android:layout_width="42dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toStartOf="@+id/front_face_photo_checkbox"
                        android:gravity="end"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_take_license_back_photo" />

                    <CheckBox
                        android:id="@+id/front_face_photo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="9dp"
                        android:buttonTint="@color/colorMainBlue"
                        android:checked="false"
                        android:enabled="false" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/back_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_field_layout_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_with_border_ripple_effect"
                    android:onClick="@{(v) -> callback.onClick(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/back_photo"
                        android:textColor="@color/main_title_color"
                        android:textSize="@dimen/general_text_title_size"
                        app:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:id="@+id/back_face_photo"
                        android:layout_width="42dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toStartOf="@+id/back_face_photo_checkbox"
                        android:gravity="end"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_take_license_back_photo" />

                    <CheckBox
                        android:id="@+id/back_face_photo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="9dp"
                        android:buttonTint="@color/colorMainBlue"
                        android:checked="false"
                        android:enabled="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/seat_front_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_field_layout_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_with_border_ripple_effect"
                    android:onClick="@{(v) -> callback.onClick(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/seat_front_photo"
                        android:textColor="@color/main_title_color"
                        android:textSize="@dimen/general_text_title_size"
                        app:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:id="@+id/seat_front_face_photo"
                        android:layout_width="42dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toStartOf="@+id/seat_front_face_photo_checkbox"
                        android:gravity="end"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_take_license_front_photo" />

                    <CheckBox
                        android:id="@+id/seat_front_face_photo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="9dp"
                        android:buttonTint="@color/colorMainBlue"
                        android:checked="false"
                        android:enabled="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/seat_back_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_field_layout_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_with_border_ripple_effect"
                    android:onClick="@{(v) -> callback.onClick(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/seat_back_photo"
                        android:textColor="@color/main_title_color"
                        android:textSize="@dimen/general_text_title_size"
                        app:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:id="@+id/seat_back_face_photo"
                        android:layout_width="42dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toStartOf="@+id/seat_back_face_photo_checkbox"
                        android:gravity="end"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_take_license_back_photo" />

                    <CheckBox
                        android:id="@+id/seat_back_face_photo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="9dp"
                        android:buttonTint="@color/colorMainBlue"
                        android:checked="false"
                        android:enabled="false" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>