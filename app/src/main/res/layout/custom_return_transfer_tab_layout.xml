<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delivery_contract"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/spacing_default"
    android:background="@drawable/dashboard_future_bg">

    <TextView
        android:id="@+id/first_return_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/first_return_title"
        android:layout_alignBottom="@+id/first_return_title"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_toEndOf="@+id/first_return_title"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/first_return_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_layout"
        android:layout_alignStart="@+id/horizontal_layout"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/nearest_return"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total_return_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_default"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white_color"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/return_transfer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_return_transfer"
        android:layout_alignStart="@+id/total_return_transfer"
        android:fontFamily="@font/roboto"
        android:text="@string/future_transfer_title"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/horizontal_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/return_transfer_title"
        android:layout_alignStart="@+id/return_transfer_title"
        android:layout_marginTop="@dimen/spacing_default"
        android:layout_marginEnd="@dimen/spacing_small"
        android:alpha="0.15"
        android:background="@color/white_color"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>
