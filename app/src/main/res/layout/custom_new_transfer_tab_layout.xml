<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delivery_contract"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/spacing_default"
    android:background="@drawable/dashboard_new_transfer_create_bg">


    <TextView
        android:id="@+id/new_transfer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_default"
        android:ems="6"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/new_transfer_title"
        android:textColor="@color/return_dashboard_text_title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_transfer_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_default"
        android:fontFamily="@font/roboto"
        android:text="@string/create_title"
        android:textColor="@color/create_text_title"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spacing_default"
        android:src="@drawable/icon_new_transfer_create" />

</RelativeLayout>
