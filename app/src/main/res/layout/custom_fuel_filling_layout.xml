<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/spacing_default"
    android:background="@drawable/dashboard_fuel_filling_bg">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_tiny"
        app:srcCompat="@drawable/icon_fuel_filling" />

    <TextView
        android:id="@+id/total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_default"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white_color"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_count"
        android:layout_alignStart="@+id/total_count"
        android:layout_marginEnd="@dimen/spacing_default"
        android:fontFamily="@font/roboto"
        android:text="@string/fuel_filling"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

</RelativeLayout>
