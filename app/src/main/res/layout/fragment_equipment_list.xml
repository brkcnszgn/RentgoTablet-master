<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="groupCodeInformation"
            type="com.creatifsoftware.filonova.model.GroupCodeInformation" />

        <variable
            name="viewModel"
            type="com.creatifsoftware.filonova.viewmodel.EquipmentListViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_base_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:windowSoftInputMode="adjustPan">

        <LinearLayout
            android:id="@+id/lnr_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/header_layout_bg"
            android:elevation="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/car_selection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:textColor="@color/main_title_color"
                android:textSize="27sp"
                app:fontFamily="@font/roboto_medium" />

            <EditText
                android:id="@+id/plate_number_search"
                android:layout_width="200dp"
                android:layout_height="@dimen/search_bar_height"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/delivery_search_button_bg"
                android:drawableStart="@drawable/icon_search_button"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorAccent"
                android:elevation="8dp"
                android:ems="12"
                android:hint="@string/hint_search"
                android:paddingStart="@dimen/spacing_default"
                android:textSize="12sp"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lnr_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:orientation="vertical"
            android:padding="1dp">


            <LinearLayout
                android:id="@+id/equipment_list_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/group_code_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/car_choice_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/car_group"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"
                        android:background="@drawable/group_code_text_bg"
                        android:gravity="center"
                        android:text="@{groupCodeInformation.groupCodeName}"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal"
                        android:text="@string/car_classes"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/group_code_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:src="@{groupCodeInformation.getGroupCodeImageById(groupCodeInformation.groupCodeId)}"
                        tools:src="@drawable/ic_logo" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/equipment_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/customer_information_title"
                    app:layoutManager="LinearLayoutManager" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/availability_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/customer_information_title"
                android:visibility="invisible"
                app:layoutManager="LinearLayoutManager" />

        </LinearLayout>

    </RelativeLayout>

</layout>
