<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorWhite" />
                    <corners android:radius="@dimen/radius_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp">
                <shape>
                    <solid android:color="@android:color/black" />
                    <corners android:radius="@dimen/radius_corner" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item>
                <shape>
                    <solid android:color="@color/colorMainBlue" />
                    <corners android:radius="@dimen/radius_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>